<Defs>
  <ThingDef ParentName="BuildingBase">
    <defName>OVC_InfusionChamber</defName>
    <label>infusion chamber</label>
    <description>A contained chamber for funneling flux into items.</description>
    <thingClass>Overcharged.InfusionChamber</thingClass>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Buildings/InfusionChamber</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(4.5,3)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.20</staticSunShadowHeight>
    <costList>
      <Plasteel>100</Plasteel>
    </costList>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>2000</WorkToBuild>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Cleanliness>-15</Cleanliness>
    </statBases>
    <size>(4,1)</size>
    <rotatable>True</rotatable>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>60</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <building>
      <preventDeteriorationOnTop>true</preventDeteriorationOnTop>
      <ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
      <defaultStorageSettings>
        <priority>Important</priority>
        <filter>
          <categories>
            <li>UnchargedThing</li>
          </categories>
        </filter>
      </defaultStorageSettings>
    </building>
    <recipes>
      <li>OVC_LoadUnchargedFluxRifle</li>
      <li>OVC_LoadUnchargedHolostaff</li>
      <li>OVC_LoadSteel</li>
      <li>OVC_LoadUranium</li>
    </recipes>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTransmitter</compClass>
        <transmitsPower>true</transmitsPower>
      </li>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>OVC_LightningRod</li>
        </linkableFacilities>
      </li>
    </comps>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <designationHotKey>Misc3</designationHotKey>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>
  </ThingDef>
</Defs>