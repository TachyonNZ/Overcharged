			</li>
		</ingredients>
		<modExtensions>
			<li Class="Overcharged.InfuserRecipeExtension">
				<chargedThing>OVC_Gun_FluxRifle</chargedThing>
			</li>
		</modExtensions>
	</RecipeDef>

	<RecipeDef ParentName="InfuserRecipeBase">
		<defName>OVC_LoadSteel</defName>
		<label>prime fluxsteel</label>
		<description>load steel and plasteel into the infuser, ready to make fluxsteel</description>
		<workAmount>10</workAmount>
		<workSpeedStat>UnskilledLaborSpeed</workSpeedStat>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>90</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Plasteel</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<modExtensions>
			<li Class="Overcharged.InfuserRecipeExtension">
				<chargedThing>OVC_Fluxsteel</chargedThing>
				<count>50</count>
			</li>
		</modExtensions>
	</RecipeDef>

	<RecipeDef ParentName="InfuserRecipeBase">
		<defName>OVC_LoadUranium</defName>
		<label>prime fission material</label>
		<description>load uranium into the infuser, ready to make fission material</description>
		<workAmount>10</workAmount>
		<workSpeedStat>UnskilledLaborSpeed</workSpeedStat>
		<effectWorking>Cremate</effectWorking>
